<%- include('partials/header.ejs') %>
    <h1 class="text-center py-2 pb-0">
        <%= formTitle %>
    </h1>
    <form class="display-form">
        <div class="form-group">
            <label for="book-name">Book Name</label>
            <input type="email" class="form-control" id="form-book-name" placeholder="Enter Book Name">
        </div>
        <div class="form-group">
            <label for="author-name">Author Name</label>
            <input type="email" class="form-control" id="form-author" placeholder="Autho Name">
        </div>
        <div class="form-group">
            <label for="isbn-number">ISBN Number</label>
            <input type="email" class="form-control" id="form-isbn" placeholder="isbn no">
        </div>
        <div class="form-group">
            <label for="book-note">Notes</label>
            <textarea class="form-control" id="form-book-note" rows="15"
                placeholder="Enter your notes"></textarea>
        </div>
        <div class="form-group">
            <label for="">Rating</label>
            <select class="form-control" id="form-rating">
                <% for( let i = 1; i <=5; i++ ) { %>
                    <option value="<%= i %>"><%= i %></option>
                <% } %>
            </select>
        </div>
        <div class="form-group">
            <label for="category-select">Category</label>
            <select class="form-control" id="categories" name="categories[]" multiple>
                <% allCategories.forEach(cat=> { %>
                    <option value="<%= cat %>" <%=note?.categories?.includes(cat) ? "selected" : "" %>>
                        <%= cat %>
                    </option>
                    <% }) %>
            </select>
        </div>
        <div class="form-check">
            <input class="form-check-input" type="checkbox" value="true" <%= note?.favorite ? "checked" : "" %> id="form-favourite">
            <label class="form-check-label" for="form-favourite">
                Mark as Favourite
            </label>
        </div>
    </form>

    <script>
        const categoriesSelect = document.getElementById('categories');
        const choices = new Choices(categoriesSelect, {
            removeItemButton: true,   
            searchEnabled: true,      
            placeholder: true,
            placeholderValue: 'Select categories...'
        });
    </script>


    <%- include('partials/footer.ejs') %>